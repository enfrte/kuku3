document.addEventListener('htmx:afterRequest', event => {
	const toastEl = document.querySelector('.after-request-toast');
	if (toastEl) {
		const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
		toast.show();
	}
});
</script>

